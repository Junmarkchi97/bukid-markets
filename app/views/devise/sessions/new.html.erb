<div class="login-wrapper">
  <div class="login-image">
    <img src="https://res.cloudinary.com/bukidmarkets/image/upload/v1664814046/GROWING_3_me4o03.png">
  </div>
  <div class="login-container">
    <h2>Log in</h2>
    <p class="alert"><%= alert %></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login") do |f| %>
      <div class="field-email">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "input-email", required: "true" %>
        <%= f.label :email, class: "label-email" %><br />
      </div>

      <div class="field-pass">
        <%= f.password_field :password, autocomplete: "current-password", class: "input-pass", required: "true" %>
        <%= f.label :password , class: "label-pass" %><br />
      </div>

      <div class="field remember-forgot">
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot" %>
        <% end %>
      </div>
      <%= f.button "Log in", class: "login-submit", data: {turbo: false, disable_with: "<i class='fa-solid fa-spinner fast-spin'></i>"} %>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= form_for "Login",
          url: omniauth_authorize_path(resource_name, provider),
          method: :post,
          data: { turbo: "false"} do |g| %>
            <%= g.button "Sign with Google", data: { turbo: false }, class: "login-google" %>
          <%# <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %>
        <% end %>
      <% end %>
    <% end %>

    <div class="signup">
      <p>Dont have an account yet?</p>
      <%= link_to "Sign up", sign_up_path, class: "signup" %>
    </div>

    <%# <%= render "devise/shared/links" %>
    
  </div>
</div>
    <%= render 'layouts/notice' %>

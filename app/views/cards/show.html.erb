<h1>Cards#show</h1>
<p>Find me in app/views/cards/show.html.erb</p>
<% @order_items.each do |item| %>
  <h3><%= item.product.title %> </h3>
  <h5><%= item.product.price %> </h5>

  <%= form_for item do |f| %>
     <%= f.hidden_field :product_id, :value => item.product_id %>
     <%= f.number_field :quantity, :value => item.quantity.to_i, :min => 1 %>
     <%= f.submit "Update Card" %>

     <%= link_to "Remove Items", order_item_path(item), data: { turbo_method: :delete } %>
  <% end %>

  <h2>Subtotal: <%= item.total %> </h2>
<% end %>
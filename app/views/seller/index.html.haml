
.seller-centre
  - if notice != nil
    %p.notice= notice
  .seller
    .buttons
      .dashboard
        - if current_user.avatar?
          = image_tag(current_user.avatar.to_s)
        - elsif current_user.google_avatar?
          = image_tag(current_user.google_avatar.to_s)
        .dashboard-container
          %h2
            Dashboard
          %h5
            Hello, #{current_user.first_name} #{current_user.last_name} ðŸ‘‹
      = link_to "Post a Product", new_product_path
    .your-posting
      .posting
        %h3
          Your Postings
        .categories
          = button_to "Active" do
            Active (#{@products.count})
          .search
            %span.material-symbols-sharp
              search
            %input{:placeholder => "Search"}
      .products
        - @products.each_with_index do |product, index|
          - if product.user_id == current_user.id
            .user-product
              .title
                %h2
                  %span
                    #{index + 1}.
                  .prod-title
                    #{product.title}
                .icons
                  %a{:href => "products/#{product.id}/edit"} 
                    %span.material-symbols-sharp
                      edit_square
                  = button_to product, method: :delete do
                    %span.material-symbols-sharp
                      delete
              .body
                .price
                  Price: #{product.price} / Kilo
                .description-thumbnail
                  .desc
                    Description:
                    = product.description
                  .thumbnail
                    Thumbnail:
                    %a{:href => product.thumbnail.to_s}
                      = image_tag(product.thumbnail.to_s, class:"thumbnail-image")

